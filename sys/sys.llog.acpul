### sys.livelog2

livelog2 {
 a 502200;

 new
  # u0, mode -> lid 
  # mode:
  #  0 - "/" & "." splitter
  #  1 - "/" splitter
  #  2 - "." splitter
  io(_0, a+0, _1, 0,0,0);

 put
  # u0, lid, path, msg, replace
  # path obj:str|buf|dma
  # path -1 - selected path
  io(_0, a+1, _1, _2, _3, _4);

 log
  # u0, lid, path, msg
  put(_0, _1, _2, 0);
 replace
  # u0, lid, path, msg
  put(_0, _1, _2, 1);

 get
  # u0, lid, path -> msg
  io(_0, a+2, _1, 0,0,0);

 get.children
  # u0, lid, path, buf, mode -> list.buf
  # mode 0 - names only
  # mode 1 - full path
  # mode 2 - recursive names only
  io(_0, a+3, _1, 0,0,0);

 erase
  # u0, lid, path
  io(_0, a+4, _1, 0,0,0);

 # PATH

 path {
  ROOT 0-2;
  
  select
   # u0, lid, mode, path, v0
   # mode: flags 8 2 1
   #  1: flag mode
   #   0 - start or path
   #   1 - relative
   #  2: flag child
   #   0 - select node
   #   1 - select child with index (v0)
   #  8: flag splitter
   #   0  - "/" spitter
   #   8 - "." dot splitter
   # path:
   #  "/abc" - start "abc"
   #  "abc" - relative "$P/abc"
   #  "/a/b" - start "a/b"
   #  "a.b" - relative "a.b"
   io(_0, a+5, _1, _1, _2, _3);

  push
   # u0, lid, str
   io(_0, a+6, _1, _2, 0,0);
  pop
   # u0, lid
   io(_0, a+7, _1, 0,0,0);

  get
    # u0, lid, buf -> path.buf
   io(_0, a+8, _1, 0,0,0);

 };

 # NAV

 begin path.push(__);
 end path.pop(__);

 # EVENTS

 events.on
  # u0, lid, on
  io(_0, a+9, _1, _2, 0,0);

 # EXT

 printv
  # u0, lid, path, fmt, v
  io(_0, a+10, _1, _2, _3,_4);

};

llog2 livelog2;

